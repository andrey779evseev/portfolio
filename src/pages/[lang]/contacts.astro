---
import Label from "@components/label.astro";
import { LocalesList, createLocale } from "@helpers/locale";
import Layout from "@layouts/layout.astro";

export const getStaticPaths = () => {
  return LocalesList.map((locale) => ({
    params: { lang: locale },
  }));
};

const { lang } = Astro.params;

const locale = createLocale(lang);
---

<Layout locale={locale} title="contacts">
  <div class="mt-12 px-8 sm:p-0">
    <div class="mb-16 flex text-[32px] font-semibold">
      <div class="text-primary">/</div>
      <div class="text-white">{locale.contacts.heading}</div>
    </div>
    <div
      class="mb-20 flex flex-col items-center justify-between lg:flex-row lg:items-start"
    >
      <div class="mb-4 text-center text-gray sm:w-[505px] lg:mb-0 lg:text-left">
        {locale.home.contacts.description}
      </div>
      <div class="border border-gray p-2 sm:p-4">
        <div class="mb-4 font-semibold text-white">
          {locale.home.contacts.message}
        </div>
        <div class="mb-4 flex items-center">
          <img src="/assets/email.svg" alt="email" />
          <a
            href="mailto:anddrey779esveev@gmail.com"
            class="ml-1 text-sm text-gray sm:ml-4 sm:text-base"
          >
            andrey779evseev@gmail.com
          </a>
        </div>
        <div class="flex items-center">
          <img src="/assets/telegram.svg" alt="email" />
          <div class="ml-1 text-sm text-gray sm:ml-4 sm:text-base">
            @malifor
          </div>
        </div>
      </div>
    </div>
    <Label>{locale.contacts.other}</Label>
    <div class="mb-28 flex items-center">
      <img src="/assets/twitter.svg" alt="twitter" />
      <span class="ml-3 text-gray">@andrew_evseev04</span>
    </div>
  </div>
</Layout>
